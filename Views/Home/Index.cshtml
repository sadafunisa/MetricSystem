@model MetricSystem.Models.TemperatureModel

@{
    ViewData["Title"] = "Temperature Converter";
}

<h2>Temperature Converter</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="FahrenheitValue">Fahrenheit Value:</label>
        <input asp-for="FahrenheitValue" type="number" step="any" />
    </div>

    <div class="form-group">
        <label asp-for="CelsiusValue">Celsius Value:</label>
        <input asp-for="CelsiusValue" type="number" step="any" readonly 
               value="@ViewBag.ConvertedValue" />
    </div>

    <div class="form-group">
        <button type="submit">Convert</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>

<style>
    .form-group {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }
    
    label {
        width: 150px;
        margin-right: 10px;
        font-weight: bold;
        text-align: right;
    }
    
    input[type="number"] {
        width: 200px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }
    
    input[readonly] {
        background-color: #f8f9fa;
    }
    
    button, a {
        padding: 10px 20px;
        margin-right: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        background-color: #007bff;
        color: white;
    }
    
    a {
        background-color: #6c757d;
    }
</style>
